<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PrimaryController">

   <VBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
      <HBox alignment="CENTER" spacing="10">
         <Button mnemonicParsing="false" onAction="#mostrarHistorico" text="Generar Historico" />
      </HBox>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Restaurante " textFill="#659e79">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
         <Button fx:id="mesa1" text="Mesa 1" />
         <Button fx:id="mesa2" text="Mesa 2" />
         <Button fx:id="mesa3" text="Mesa 3" />
      </HBox>
      <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
         <Button fx:id="mesa4" text="Mesa 4" />
         <Button fx:id="mesa5" text="Mesa 5" />
         <Button fx:id="mesa6" text="Mesa 6" />
      </HBox>
      <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
         <Button fx:id="mesa7" text="Mesa 7" />
         <Button fx:id="mesa8" text="Mesa 8" />
         <Button fx:id="mesa9" text="Mesa 9" />
      </HBox>
      <!-- Puedes agregar más elementos aquí según tus necesidades -->
   </VBox>

</AnchorPane>
